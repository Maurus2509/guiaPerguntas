<%- include('partials/header') %>

    <body>
        <%- include('partials/navbar') %>
            <div class="container">
                <hr>
                <h1>Perguntas</h1>
                <hr>
                <a href="/perguntar" class="btn btn-primary">Perguntar</a>
                <hr>
                <% perguntas.forEach(pergunta=>{ %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>
                        <div class="card-footer footer">
                            <a href="/pergunta/<%= pergunta.id %>"><button
                                    class="btn btn-primary">Responder</button></a>
                            <form method="post" action="/pergunta/deletar">
                                <input type="hidden" name="id" value="<%= pergunta.id%>">
                                <a href="/"><button class="btn btn-danger">Apagar</button></a>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <script src="/database/deletar.js"></script>
    </body>

    <%- include('partials/footer') %>